@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->

            <div class="error-container">
                <div class="well">
                    <h1 class="grey lighter smaller">
                        <span class="blue bigger-125">
                            <i class="icon-sitemap"></i>
                            404错误
                        </span>
                        页面无法显示
                    </h1>

                    <hr />
                    <h3 class="lighter smaller">您请求的页面无法显示</h3>

                    <div>
                        <div class="space"></div>
                        <h4 class="smaller">可能的原因：</h4>

                        <ul class="list-unstyled spaced inline bigger-110 margin-15">
                            <li>
                                <i class="icon-hand-right blue"></i>
                                您没有权限查看该页面
                            </li>

                            <li>
                                <i class="icon-hand-right blue"></i>
                                页面不存在
                            </li>

                            <li>
                                <i class="icon-hand-right blue"></i>
                                您使用的浏览器版本过时，请更换浏览器后重试
                            </li>
                        </ul>
                    </div>

                    <hr />
                    <div class="space"></div>

                    <div class="center">
                        <a href="#" class="btn btn-grey">
                            <i class="icon-arrow-left"></i>
                            返回首页
                        </a>
                    </div>
                </div>
            </div><!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</div><!-- /.page-content -->
